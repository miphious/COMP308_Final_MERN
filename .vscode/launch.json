{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "nodemon - global",
            "runtimeExecutable": "nodemon",
            "program": "${workspaceFolder}/bin/www.js",
            "restart": true,
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "nodemon - local npm",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run",
                "nodemon",
                "--"
            ]
        }
    ]
}
